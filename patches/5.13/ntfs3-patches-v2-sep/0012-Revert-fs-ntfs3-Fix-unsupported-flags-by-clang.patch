 obj-$(CONFIG_NTFS3_FS) += ntfs3.o
 
@@ -35,4 +31,4 @@ ntfs3-$(CONFIG_NTFS3_LZX_XPRESS) += $(addprefix lib/,\
 		decompress_common.o \
 		lzx_decompress.o \
 		xpress_decompress.o \
