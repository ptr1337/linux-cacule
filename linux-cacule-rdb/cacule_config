#!/usr/bin/bash

configure() {
echo "Enable CacULE CPU scheduler..."
scripts/config --enable CONFIG_CACULE_SCHED
scripts/config --enable CONFIG_CACULE_RDB
scripts/config --disable CONFIG_FAIR_GROUP_SCHED
